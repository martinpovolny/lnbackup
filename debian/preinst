#! /bin/sh
# preinst script for lnbackup-ng
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PKG='lnbackup-ng'
FILES='/etc/updatedb.conf'

add_diversions() {
    for FILE in $FILES;do
        dpkg-divert --package $PKG --divert $FILE.solnetdivert.disabled --rename $FILE
        # pokud existuje _pouze_ diverze, tak ho zkopirujeme i na puvodni, at tam je
        if [ -f $FILE.solnetdivert.disabled -a ! -f $FILE ];then
            cp -a $FILE.solnetdivert.disabled $FILE
        fi
    done
}

case "$1" in
    install|upgrade)
        add_diversions
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


